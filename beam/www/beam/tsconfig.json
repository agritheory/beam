{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"jsx": "preserve",
		"isolatedModules": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["**/*.ts", "**/*.d.ts", "**/*.vue"]
}
